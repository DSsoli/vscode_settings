    {
        "key": "ctrl+pagedown",
        "command": "cursorMove",
        "when": "editorTextFocus", 
        "args": {
            "to": "nextBlankLine",
            "by": "wrappedLine"
        }
    },
    {
        "key": "ctrl+pageup",
        "command": "cursorMove",
        "when": "editorTextFocus", 
        "args": {
            "to": "prevBlankLine",
            "by": "wrappedLine"
        }
    },
    {
        "key": "ctrl+shift+pagedown",
        "command": "cursorMove",
        "when": "editorTextFocus",
        "args": {
            "to": "nextBlankLine",
            "by": "wrappedLine",
            "select": true
        }
    },
    {
        "key": "ctrl+shift+pageup",
        "command": "cursorMove",
        "when": "editorTextFocus",
        "args": {
            "to": "prevBlankLine",
            "by": "wrappedLine",
            "select": true
        }
    },
    {
        "key": "ctrl+alt+0",
        "command": "jupyter.restartkernel"
    },

]